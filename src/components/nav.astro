---
const BASE = import.meta.env.BASE_URL || "/";
const withBase = (p) => {
  const clean = String(p || "");
  return clean.startsWith("/") ? `${BASE}${clean.slice(1)}` : `${BASE}${clean}`;
};
---

<header class="nav">
  <div class="container nav__inner">
    <a class="brand" href={withBase("/")}> 
      <!-- Placeholder dot keeps layout stable until brand icons are added -->
      <span class="brand__dot" aria-hidden="true"></span>
      <span class="brand__name">Capitoken</span>
    </a>

    <nav class="nav__links" aria-label="Primary">
      <a href="#launch">Launch</a>
      <a href="#launchpanel">Panel</a>
      <a href="#tokenomics">Tokenomics</a>
      <a href="#roadmap">Roadmap</a>
      <a href={withBase("/verify/")}>Verify</a>
    </nav>
  </div>
</header>
