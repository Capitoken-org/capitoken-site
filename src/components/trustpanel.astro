---
const title = "Capitoken Trust Snapshot (Live)";
---

<section class="tp-card" id="trustPanel">
  <header class="tp-header">
    <h2 class="tp-title">{title}</h2>
    <p class="tp-muted">Read-only verification. No signatures. No approvals.</p>
  </header>

  <div class="tp-grid">
    <div class="tp-line"><span>Wallet</span><strong id="tp_wallet">—</strong></div>
    <div class="tp-line"><span>Network</span><strong id="tp_network">—</strong></div>
    <div class="tp-line"><span>Token</span><strong id="tp_token">—</strong></div>
    <div class="tp-line"><span>Contract</span><strong id="tp_contract">—</strong></div>
    <div class="tp-line"><span>Uniswap Pair</span><strong id="tp_pair">—</strong></div>
    <div class="tp-line"><span>Liquidity (WETH)</span><strong id="tp_liq">—</strong></div>
    <div class="tp-line"><span>Market</span><strong id="tp_market">—</strong></div>

    <div class="tp-line"><span>Price</span><strong id="tp_price">—</strong></div>
    <div class="tp-line"><span>Liquidity (USD)</span><strong id="tp_liqusd">—</strong></div>
    <div class="tp-line"><span>24h Volume</span><strong id="tp_vol">—</strong></div>
    <div class="tp-line"><span>FDV (est.)</span><strong id="tp_fdv">—</strong></div>

    <div class="tp-line"><span>Trust Score</span><strong id="tp_score">—</strong></div>
  </div>

  <div class="tp-alerts" id="tp_alerts"></div>

  <div class="tp-actions">
    <button class="tp-btn" id="tp_connect" type="button">Connect Wallet</button>
    <button class="tp-btn" id="tp_switch" type="button">Switch to Mainnet</button>
    <button class="tp-btn" id="tp_addtoken" type="button">Add Capitoken to MetaMask</button>

    <a class="tp-btn tp-btn--secondary" id="tp_etherscan" target="_blank" rel="noopener">View on Etherscan</a>
    <a class="tp-btn tp-btn--secondary" id="tp_uniswap" target="_blank" rel="noopener nofollow">Buy on Uniswap</a>
    <a class="tp-btn tp-btn--secondary" id="tp_dex" target="_blank" rel="noopener">DexScreener</a>
  </div>
</section>

<style>
  .tp-card{
    width:100%;
    margin:16px 0 0 0;
    border:1px solid rgba(255,255,255,.12);
    border-radius:16px;
    padding:16px;
    background: rgba(0,0,0,.20);
    backdrop-filter: blur(8px);
  }
  .tp-title{margin:0 0 6px 0}
  .tp-muted{opacity:.75;margin:0 0 14px 0}
  .tp-grid{display:grid;gap:10px}
  .tp-line{display:flex;justify-content:space-between;gap:12px;padding:8px 0;border-bottom:1px dashed rgba(255,255,255,.12)}
  .tp-line span{opacity:.85}
  .tp-line strong{font-weight:800}
  .tp-alerts{margin-top:12px;display:grid;gap:8px}
  .tp-alert{border:1px solid rgba(255,0,0,.35);padding:10px;border-radius:12px;font-size:.95rem}
  .tp-actions{margin-top:14px;display:flex;flex-wrap:wrap;gap:10px}
  .tp-btn{border:1px solid rgba(255,255,255,.18);padding:10px 12px;border-radius:12px;text-decoration:none;background:transparent;color:inherit;cursor:pointer;line-height:1}
  .tp-btn--secondary{opacity:.85}
</style>
