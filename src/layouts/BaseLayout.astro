---
import "../styles/global.css";
import Nav from "../components/nav.astro";

const {
  title = "Capitoken (CAPI) — Official Website",
  description = "Capitoken official website — verified links, launch panel, tokenomics, and community updates.",
} = Astro.props;

const year = new Date().getFullYear();

// Site + base (important for GitHub Pages)
const site = Astro.site?.toString() ?? "https://capitoken-org.github.io";
const base = import.meta.env.BASE_URL; // "/" in dev, "/capitoken-site/" in build

const canonical = new URL(Astro.url.pathname.replace(base, "/"), `${site}${base}`).toString();
const ogImage = `${site}${base}og.png`;

// GA4
const GA4_ID = "G-KK8HRNV8ZZ";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Capitoken" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <title>{title}</title>

    <!-- Google Analytics 4 (GA4) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`}></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){ dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', '{GA4_ID}', { anonymize_ip: true });
    </script>
  </head>

  <body>
    <Nav />
    <main class="container">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        © {year} Capitoken. All rights reserved.
      </div>
    </footer>
  </body>
</html>
