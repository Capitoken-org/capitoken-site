---
const title = "Capitoken (CAPI) — Official Website";
const description =
  "Capitoken official website — verified links, launch panel, tokenomics, and community updates.";

const rawBase = import.meta.env.BASE_URL || "/";
const base = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;

// Para links absolutos de assets en GH Pages (evita 404 por falta de slash)
const cssHref = `${base}global.css`;
const faviconHref = `${base}favicon.svg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- IMPORTANT: en GH Pages debe incluir BASE_URL con slash -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}global.css`} />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
  </head>
  <body>
    <slot />
  </body>
</html>
