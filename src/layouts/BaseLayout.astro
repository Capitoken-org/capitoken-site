---
import Nav from "../components/nav.astro";

const title = Astro.props.title || "Capitoken (CAPI)";
const description = Astro.props.description || "Deep-green premium design, clear narrative, and verified links â€” built for adoption.";

// GitHub Pages base (astro.config.mjs: base: "/capitoken-site/")
const BASE = import.meta.env.BASE_URL || "/";
const withBase = (p) => {
  const clean = String(p || "");
  return clean.startsWith("/") ? `${BASE}${clean.slice(1)}` : `${BASE}${clean}`;
};

// Cache-bust for GitHub Pages / CDN
const CSS_VERSION = "14";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Theme -->
    <meta name="theme-color" content="#050c0a" />

    <!-- Favicons / PWA -->
    <link rel="icon" type="image/png" sizes="32x32" href={`${withBase("/icons/favicon-32x32.png")}`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${withBase("/icons/favicon-16x16.png")}`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${withBase("/icons/apple-touch-icon.png")}`} />
    <link rel="manifest" href={`${withBase("/site.webmanifest")}`} />

    <!-- IMPORTANT: single source of truth for global styles -->
    <link rel="stylesheet" href={`${withBase(`/global.css?v=${CSS_VERSION}`)}`} />

    <slot name="head" />
  </head>

  <body>
    <Nav />
    <main>
      <slot />
    </main>
  </body>
</html>
