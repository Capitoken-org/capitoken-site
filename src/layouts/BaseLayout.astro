---
const base = import.meta.env.BASE_URL; // "/" en dev, "/capitoken-site/" en prod (GitHub Pages)

const {
  title = "Capitoken (CAPI) — Official Website",
  description = "Capitoken official website — verified links, launch panel, tokenomics, and community updates.",
  ogImage = `${base}og.png`,
  canonicalPath = "/",
} = Astro.props;

const canonicalUrl = new URL(`${base.replace(/\/$/, "")}${canonicalPath}`, Astro.site ?? "https://capitoken-org.github.io");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.toString()} />

    <!-- ✅ SINGLE SOURCE OF TRUTH: public/global.css -->
    <link rel="stylesheet" href={`${base}global.css`} />

    <!-- Favicons / PWA -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="manifest" href={`${base}site.webmanifest`} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, canonicalUrl).toString()} />
    <meta property="og:url" content={canonicalUrl.toString()} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, canonicalUrl).toString()} />

    <title>{title}</title>

    <!-- GA4 (si ya lo tienes) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KK8HRNV8ZZ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KK8HRNV8ZZ', { anonymize_ip: true });
    </script>
  </head>

  <body>
    <slot />
  </body>
</html>
