---
const {
  title = "Capitoken — Official Website",
  description = "Capitoken official website — verified links, tokenomics, and launch info.",
  lang = "en",
} = Astro.props;

const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- CSS estable para GitHub Pages (subpath safe) -->
    <link rel="stylesheet" href="./global.css" />
  </head>

  <body>
    <slot />

    <footer class="footer">
      <div class="container">
        © {year} Capitoken. All rights reserved.
      </div>
    </footer>
  </body>
</html>
