---
import Nav from "../components/nav.astro";

// GitHub Pages base ("/" in dev, "/capitoken-site/" in production build)
const base = import.meta.env.BASE_URL;

const {
  title = "Capitoken (CAPI) — Official Website",
  description = "Capitoken official website — verified links, launch panel, tokenomics, and community updates.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- IMPORTANT: single global stylesheet served from /public/global.css -->
    <link rel="stylesheet" href={`${base}global.css`} />

    <!-- Avoid browser requesting /favicon.ico (404) -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />

    <!-- Optional: OpenGraph/Twitter (keep if you have images in /public) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <body>
    <Nav />
    <main>
      <slot />
    </main>
  </body>
</html>
