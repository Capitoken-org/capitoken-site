---
const CSS_VERSION = "15";
const JS_VERSION = "15";
const title = Astro.props.title ?? "Capitoken";
const description =
  Astro.props.description ??
  "Capitoken â€” community-first memecoin ecosystem. Verified links + on-chain panels.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + "favicon.svg"} />
    <link rel="stylesheet" href={import.meta.env.BASE_URL + `global.css?v=${CSS_VERSION}`} />
  </head>

  <body>
    <slot />

    <!-- Runtime config (classic script) -->
    <script src={import.meta.env.BASE_URL + `capi-config.js?v=${JS_VERSION}`}></script>

    <!-- Engines (ES modules) -->
    <script type="module" src={import.meta.env.BASE_URL + `trust-engine.js?v=${JS_VERSION}`}></script>
    <script type="module" src={import.meta.env.BASE_URL + `market-engine.js?v=${JS_VERSION}`}></script>
  </body>
</html>
