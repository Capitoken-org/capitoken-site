---
import Nav from "../components/nav.astro";

const {
  title = "Capitoken (CAPI) — Official Website",
  description = "Capitoken official website — verified links, launch panel, tokenomics, and community updates.",
  ogImage = "og.png",
} = Astro.props;

const base = import.meta.env.BASE_URL; // "/" en dev, "/capitoken-site/" en GitHub Pages
const GA4_ID = "G-KK8HRNV8ZZ"; // tu ID
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- ✅ CSS estable para GitHub Pages -->
    <link rel="stylesheet" href={`${base}global.css`} />

    <!-- ✅ Icons/manifest con BASE_URL (si no, 404 en /capitoken-site/) -->
    <link rel="icon" href={`${base}favicon.svg`} />
    <link rel="manifest" href={`${base}site.webmanifest`} />
    <meta name="theme-color" content="#0a4333" />

    <!-- ✅ OG -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${base}${ogImage}`} />

    <!-- ✅ JS públicos (si existen en /public) -->
    <script defer src={`${base}capi-config.js`}></script>
    <script defer src={`${base}capi-wallets.js`}></script>
    <script defer src={`${base}capi-dex.js`}></script>

    <!-- ✅ Google Analytics 4 -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`}></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KK8HRNV8ZZ', { anonymize_ip: true });
    </script>
  </head>

  <body>
    <Nav />
    <main class="container">
      <slot />
    </main>
  </body>
</html>
