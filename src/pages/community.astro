---
import Layout from "../layouts/BaseLayout.astro";

const BASE = import.meta.env.BASE_URL;
const title = "Community — Capitoken";
const description = "Official Capitoken community hub — verified social links, feedback, and updates.";
---

<Layout title={title} description={description}>
  <main class="container">
    <section class="hero">
      <div class="pill">Verified info only on this website</div>
      <h1>Community</h1>
      <p class="lead">This page is designed to be safe on GitHub Pages (no server-side browser APIs). Use it for official updates and listening to the community.</p>
    </section>

    <section class="grid-2">
      <div class="card">
        <h2>Listen + Engage</h2>
        <ul class="list">
          <li><strong>X (Twitter):</strong> publish daily updates and threads.</li>
          <li><strong>Telegram:</strong> real-time chat, announcements, moderation.</li>
          <li><strong>GitHub:</strong> transparency, docs, and site source.</li>
        </ul>
        <p class="muted">Tip: Only trust social links published on the <a href={`links`}>Links</a> page.</p>
      </div>

      <div class="card">
        <h2>Feedback (fast)</h2>
        <p class="muted">Send ideas, bug reports, or listing requests. This uses a simple mailto to avoid server code.</p>
        <a class="btn" href="mailto:team@capitoken.org?subject=Capitoken%20Feedback&body=Message%3A%0A%0ALinks%20or%20screenshots%3A%0A">Send email</a>
        <p class="micro muted">Replace <code>team@capitoken.org</code> when you have the official mailbox.</p>
      </div>
    </section>

    <section class="card">
      <h2>Live feed (X)</h2>
      <p class="muted">When you have the official X handle, replace the timeline URL below.</p>

      <!-- Safe embed: runs on client only -->
      <a class="twitter-timeline" data-theme="dark" data-chrome="noheader nofooter noborders transparent" href="https://twitter.com/Capitoken">Tweets by Capitoken</a>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </section>
  </main>
</Layout>
