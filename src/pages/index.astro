---
import BaseLayout from "../layouts/BaseLayout.astro";

const stats = [
  { label: "Chain", value: "Ethereum" },
  { label: "Status", value: "Building" },
  { label: "Focus", value: "Community-first" },
  { label: "Design", value: "Turquoise-premium" },
];

const tokenomics = [
  { title: "97% Community", desc: "Broad distribution & liquidity-first mindset." },
  { title: "2% Operations", desc: "Sustains development, infra, and execution." },
  { title: "1% Marketing", desc: "Growth loops, listings, and content." },
];

const roadmap = [
  { phase: "Phase 1", title: "Foundation", items: ["Brand + Website", "Docs/Whitepaper", "Social channels live"] },
  { phase: "Phase 2", title: "Launch Prep", items: ["Final checks", "DEX readiness", "Community onboarding"] },
  { phase: "Phase 3", title: "Expansion", items: ["Listings", "Ecosystem features", "Partnerships"] },
];
---

<BaseLayout title="Capitoken — Official Website">
  <!-- NAV -->
  <header class="nav">
    <div class="nav__inner">
      <a class="brand" href="#top">
        <span class="brand__dot"></span>
        <span class="brand__name">Capitoken</span>
      </a>

      <nav class="nav__links">
        <a href="#tokenomics">Tokenomics</a>
        <a href="#roadmap">Roadmap</a>
        <a href="#faq">FAQ</a>
        <a href="#links">Links</a>
      </nav>
    </div>
  </header>

  <main id="top" class="container">
    <!-- HERO -->
    <section class="hero">
      <div class="hero__kicker">
        <span class="hero__kicker-dot"></span>
        <span>New site in progress</span>
      </div>

      <h1>
        Capitoken is building a <span class="accent">community-first</span> memecoin ecosystem.
      </h1>

      <p class="hero__lead">
        Turquoise-premium design, clear narrative, and verified links — built for adoption.
        This page will publish the verified contract, DEX pair, and listings when ready.
      </p>

      <div class="actions">
        <a class="btn btn--primary" href="#tokenomics">Explore Tokenomics</a>
        <a class="btn" href="#links">See Official Links</a>
      </div>

      <div class="kpi-grid">
        {stats.map((s) => (
          <div class="kpi">
            <div class="kpi__label">{s.label}</div>
            <div class="kpi__value">{s.value}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- LAUNCH PANEL -->
    <section class="section">
      <h2>Launch Panel</h2>
      <p class="small">Verified contract address, DEX pair, and listings will be published here when ready.</p>

      <div class="card-grid">
        <div class="item">
          <div class="item__label">Contract</div>
          <div class="item__value mono">TBA — verify only here</div>
        </div>
        <div class="item">
          <div class="item__label">DEX Pair</div>
          <div class="item__value mono">TBA</div>
        </div>
        <div class="item">
          <div class="item__label">Listings</div>
          <div class="item__value mono">TBA</div>
        </div>
      </div>

      <p class="small" style="margin-top: 12px;">
        Tip: Bookmark this page. Scammers will copy names and logos.
      </p>
    </section>

    <!-- TOKENOMICS -->
    <section id="tokenomics" class="section">
      <div class="section__head">
        <div>
          <h2>Tokenomics</h2>
          <p>Simple, clear allocation — built for execution and growth.</p>
        </div>
        <div class="pill">97 / 2 / 1</div>
      </div>

      <div class="card-grid">
        {tokenomics.map((t) => (
          <div class="item">
            <div class="item__title">{t.title}</div>
            <div class="item__desc">{t.desc}</div>
            <div class="bar"></div>
          </div>
        ))}
      </div>
    </section>

    <!-- ROADMAP -->
    <section id="roadmap" class="section">
      <h2>Roadmap</h2>
      <p>Focused phases with clear deliverables.</p>

      <div class="card-grid">
        {roadmap.map((r) => (
          <div class="item">
            <div class="item__label">{r.phase}</div>
            <div class="item__title">{r.title}</div>
            <ul class="list">
              {r.items.map((i) => (
                <li><span class="dot"></span><span>{i}</span></li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="section">
      <h2>FAQ</h2>

      <div class="faq-grid">
        <details class="faq">
          <summary>Where do I find the official contract?</summary>
          <p>We will publish the verified contract address in the Launch Panel and in Official Links.</p>
        </details>

        <details class="faq">
          <summary>Why a new site?</summary>
          <p>We’re moving from “coming soon” to a modern, structured site: docs, tokenomics, roadmap, and verified links.</p>
        </details>

        <details class="faq">
          <summary>Is this financial advice?</summary>
          <p>No. Crypto is high risk. Always do your own research.</p>
        </details>

        <details class="faq">
          <summary>When launch?</summary>
          <p>We’ll announce dates through official channels and update the status panel here.</p>
        </details>
      </div>
    </section>

    <!-- LINKS -->
    <section id="links" class="section">
      <h2>Official Links</h2>

      <div class="card-grid">
        <a class="item link" href="#" rel="noopener">X / Twitter (TBA)</a>
        <a class="item link" href="#" rel="noopener">Telegram (TBA)</a>
        <a class="item link" href="#" rel="noopener">Docs (TBA)</a>
      </div>
    </section>
  </main>
</BaseLayout>
