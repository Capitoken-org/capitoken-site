        { name:"Rainbow", url:"https://rainbow.me/", icon:"https://rainbow.me/favicon.ico", note:"Mobile" },
        { name:"Rabby", url:"https://rabby.io/", icon:"https://rabby.io/favicon.ico", note:"Browser" },
        { name:"Phantom", url:"https://phantom.app/", icon:"https://phantom.app/favicon.ico", note:"Multi-chain" },
