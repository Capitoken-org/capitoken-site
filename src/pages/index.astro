---
import BaseLayout from "../layouts/BaseLayout.astro";

const LAUNCH = {
  status: "Building in public",
  contract: "TBA — verify only here",
  dexPair: "TBA",
  chain: "Ethereum",
};

// Links oficiales (rellenas cuando estén listos)
const OFFICIAL = [
  { label: "X (Twitter)", href: "TBA" },
  { label: "Telegram", href: "TBA" },
  { label: "GitHub", href: "https://github.com/Capitoken-org" },
  { label: "Website", href: "https://capitoken-org.github.io/capitoken-site/" },
];

const TOKENOMICS = [
  { k: "Community", v: "97%" },
  { k: "Operations", v: "2%" },
  { k: "Marketing", v: "1%" },
];

const ROADMAP = [
  { phase: "Phase 1", title: "Foundation", items: ["Brand + Website", "Docs/Whitepaper", "Social channels live"] },
  { phase: "Phase 2", title: "Launch Prep", items: ["Final checks", "DEX readiness", "Community onboarding"] },
  { phase: "Phase 3", title: "Expansion", items: ["Listings", "Ecosystem features", "Partnerships"] },
];
---

<BaseLayout
  title="Capitoken — Official Website"
  description="Capitoken official website — verified links, tokenomics, roadmap, and launch panel."
  ogImage="og.png"
>
  <div class="nav">
    <div class="nav__inner">
      <a class="brand" href="./">
        <span class="brand__dot"></span>
        <span class="brand__name">Capitoken</span>
      </a>

      <div class="nav__links">
        <a href="#launch">Launch</a>
        <a href="#tokenomics">Tokenomics</a>
        <a href="#roadmap">Roadmap</a>
        <a href="#links">Official Links</a>
        <a href="#faq">FAQ</a>
      </div>
    </div>
  </div>

  <main class="container">
    <!-- HERO -->
    <section class="hero">
      <div class="hero__kicker">
        <span class="brand__dot" style="width:10px;height:10px;"></span>
        Verified info only on this website
      </div>

      <h1>
        Capitoken is building a <span style="color: var(--accent2)">community-first</span> memecoin ecosystem.
      </h1>

      <p class="hero__lead">
        Turquoise-premium design, clear narrative, and verified links — built for adoption.
      </p>

      <div class="actions">
        <a class="btn btn--primary" href="#launch">Launch Panel</a>
        <a class="btn" href="#links">Official Links</a>
      </div>

      <p class="small" style="margin-top:14px;">
        Security note: Scammers will copy names and logos. Verify contract + links ONLY here.
      </p>
    </section>

    <!-- LAUNCH -->
    <section id="launch" class="section">
      <h2>Launch Panel</h2>
      <p>Single source of truth for contract, pair, and status.</p>

      <div class="grid" style="margin-top:12px;">
        <div class="card col-12">
          <div class="kv"><strong>Status</strong><span>{LAUNCH.status}</span></div>
          <div class="kv"><strong>Chain</strong><span>{LAUNCH.chain}</span></div>
          <div class="kv"><strong>Contract</strong><span style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;">{LAUNCH.contract}</span></div>
          <div class="kv"><strong>DEX Pair</strong><span style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;">{LAUNCH.dexPair}</span></div>
        </div>
      </div>

      <p class="small" style="margin-top:12px;">
        If it’s not listed here, it’s not official. Always cross-check the URL.
      </p>
    </section>

    <!-- TOKENOMICS -->
    <section id="tokenomics" class="section">
      <h2>Tokenomics</h2>
      <p>Simple allocation — 97 / 2 / 1.</p>

      <div class="card" style="margin-top:12px;">
        {TOKENOMICS.map((row) => (
          <div class="kv">
            <strong>{row.k}</strong>
            <span>{row.v}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- ROADMAP -->
    <section id="roadmap" class="section">
      <h2>Roadmap</h2>
      <p>Focused phases with clear deliverables.</p>

      <div class="grid" style="margin-top:12px;">
        {ROADMAP.map((r) => (
          <div class="card col-6">
            <div class="small">{r.phase}</div>
            <h3 style="margin-top:6px;">{r.title}</h3>
            <ul style="margin:10px 0 0 18px; color: var(--muted); line-height: 1.6;">
              {r.items.map((i) => (
                <li>{i}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- OFFICIAL LINKS -->
    <section id="links" class="section">
      <h2>Official Links</h2>
      <p>Only these links are official. Anything else is a scam.</p>

      <div class="grid" style="margin-top:12px;">
        <div class="card col-12">
          {OFFICIAL.map((l) => (
            <div class="kv">
              <strong>{l.label}</strong>
              <span>
                {l.href === "TBA" ? (
                  "TBA"
                ) : (
                  <a href={l.href} target="_blank" rel="noopener noreferrer">{l.href}</a>
                )}
              </span>
            </div>
          ))}
        </div>
      </div>

      <p class="small" style="margin-top:12px;">
        Tip: Bookmark this page. Always verify the domain: capitoken-org.github.io/capitoken-site/
      </p>
    </section>

    <!-- FAQ -->
    <section id="faq" class="section">
      <h2>FAQ</h2>

      <div class="grid" style="margin-top:12px;">
        <div class="card col-6">
          <h3>Where do I find the official contract?</h3>
          <p>We publish it in the Launch Panel and Official Links only.</p>
        </div>

        <div class="card col-6">
          <h3>Is this financial advice?</h3>
          <p>No. Crypto is high risk. Do your own research.</p>
        </div>

        <div class="card col-6">
          <h3>When launch?</h3>
          <p>Dates will be announced on official channels and reflected on this site.</p>
        </div>

        <div class="card col-6">
          <h3>How to avoid scams?</h3>
          <p>Verify the URL, contract, and links only here. If it’s not here, ignore it.</p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
