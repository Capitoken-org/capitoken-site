---
import BaseLayout from "../layouts/BaseLayout.astro";

const LAUNCH = {
  status: "Building in public",
  chain: "Ethereum",
  contract: "TBA — verify only here",
  dexPair: "TBA",
  listings: "TBA",
};

const OFFICIAL = [
  { label: "X (Twitter)", href: "TBA" },
  { label: "Telegram", href: "TBA" },
  { label: "GitHub", href: "https://github.com/Capitoken-org" },
  { label: "Website", href: "https://capitoken-org.github.io/capitoken-site/" },
];

const TOKENOMICS = [
  { title: "97% Community", desc: "Broad distribution & liquidity-first mindset." },
  { title: "2% Operations", desc: "Sustains development, infra, and execution." },
  { title: "1% Marketing", desc: "Growth loops, listings, and content." },
];

const ROADMAP = [
  { phase: "Phase 1", title: "Foundation", items: ["Brand + Website", "Docs/Whitepaper", "Social channels live"] },
  { phase: "Phase 2", title: "Launch Prep", items: ["Final checks", "DEX readiness", "Community onboarding"] },
  { phase: "Phase 3", title: "Expansion", items: ["Listings", "Ecosystem features", "Partnerships"] },
];
---

<BaseLayout
  title="Capitoken — Official Website"
  description="Capitoken official website — verified links, tokenomics, roadmap, and launch panel."
>
  <!-- NAV -->
  <div class="nav">
    <div class="nav__inner">
      <a class="brand" href="./">
        <span class="brand__dot"></span>
        <span class="brand__name">Capitoken</span>
      </a>

      <div class="nav__links">
        <a href="#launch">Launch</a>
        <a href="#tokenomics">Tokenomics</a>
        <a href="#roadmap">Roadmap</a>
        <a href="#links">Links</a>
        <a href="#faq">FAQ</a>
      </div>
    </div>
  </div>

  <main class="container">
    <!-- HERO -->
    <section class="hero">
      <div class="pill">
        <span class="pill__dot"></span>
        <span>Verified info only on this website</span>
      </div>

      <h1>
        Capitoken is building a <span class="accent">community-first</span> memecoin ecosystem.
      </h1>

      <p class="hero__lead">
        Turquoise-premium design, clear narrative, and verified links — built for adoption.
        This page will publish the verified contract, DEX pair, and listings when ready.
      </p>

      <div class="actions">
        <a class="btn btn--primary" href="#tokenomics">Explore Tokenomics</a>
        <a class="btn" href="#links">See Official Links</a>
      </div>

      <div class="stats">
        <div class="stat"><div class="stat__k">Chain</div><div class="stat__v">{LAUNCH.chain}</div></div>
        <div class="stat"><div class="stat__k">Status</div><div class="stat__v">Building</div></div>
        <div class="stat"><div class="stat__k">Focus</div><div class="stat__v">Community-first</div></div>
        <div class="stat"><div class="stat__k">Design</div><div class="stat__v">Turquoise-premium</div></div>
      </div>
    </section>
    <section class="section">
  <div class="card">
    <div class="kv">
      <strong>Official domain</strong>
      <span class="mono">capitoken-org.github.io/capitoken-site/</span>
    </div>
    <div class="kv">
      <strong>Verified contract</strong>
      <span class="mono">TBA — will appear in Launch Panel only</span>
    </div>
    <div class="kv">
      <strong>Anti-scam rule</strong>
      <span>Only trust links published on this website. If it’s not here, it’s not official.</span>
    </div>
  </div>

  <p class="small" style="margin-top:12px;">
    Scammers will copy names, logos, and URLs. Bookmark this page and always verify the domain + Launch Panel.
  </p>
</section>

    <!-- LAUNCH -->
    <section id="launch" class="section">
      <div class="section__head">
        <div>
          <h2>Launch Panel</h2>
          <p>Verified contract address, DEX pair, and listings will be published here when ready.</p>
        </div>
      </div>

      <div class="grid3">
        <div class="panel">
          <div class="panel__k">Contract</div>
          <div class="panel__v mono">{LAUNCH.contract}</div>
        </div>
        <div class="panel">
          <div class="panel__k">DEX Pair</div>
          <div class="panel__v mono">{LAUNCH.dexPair}</div>
        </div>
        <div class="panel">
          <div class="panel__k">Listings</div>
          <div class="panel__v mono">{LAUNCH.listings}</div>
        </div>
      </div>

      <p class="small" style="margin-top:12px;">
        Tip: Bookmark this page. Scammers will copy names and logos.
      </p>
    </section>

    <!-- TOKENOMICS -->
    <section id="tokenomics" class="section">
      <div class="section__head">
        <div>
          <h2>Tokenomics</h2>
          <p>Simple, clear allocation — built for execution and growth.</p>
        </div>
        <div class="badge">97 / 2 / 1</div>
      </div>

      <div class="cards3">
        {TOKENOMICS.map((t) => (
          <div class="card2">
            <div class="card2__t">{t.title}</div>
            <div class="card2__d">{t.desc}</div>
            <div class="card2__bar"></div>
          </div>
        ))}
      </div>
    </section>

    <!-- ROADMAP -->
    <section id="roadmap" class="section">
      <div class="section__head">
        <div>
          <h2>Roadmap</h2>
          <p>Focused phases with clear deliverables.</p>
        </div>
      </div>

      <div class="cards3">
        {ROADMAP.map((r) => (
          <div class="card2">
            <div class="small">{r.phase}</div>
            <div class="card2__t" style="margin-top:6px;">{r.title}</div>
            <ul class="list">
              {r.items.map((i) => (
                <li><span class="dot"></span><span>{i}</span></li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- LINKS -->
    <section id="links" class="section">
      <div class="section__head">
        <div>
          <h2>Official Links</h2>
          <p>Only these links are official. Anything else is a scam.</p>
        </div>
      </div>

      <div class="card">
        {OFFICIAL.map((l) => (
          <div class="kv">
            <strong>{l.label}</strong>
            <span>
              {l.href === "TBA" ? (
                "TBA"
              ) : (
                <a href={l.href} target="_blank" rel="noopener noreferrer">{l.href}</a>
              )}
            </span>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="section">
      <div class="section__head">
        <div>
          <h2>FAQ</h2>
        </div>
      </div>

      <div class="faq2">
        <details class="faq">
          <summary>Where do I find the official contract?</summary>
          <p>We publish the verified contract address in the Launch Panel and Official Links only.</p>
        </details>
        <details class="faq">
          <summary>Is this financial advice?</summary>
          <p>No. Crypto is high risk. Do your own research.</p>
        </details>
        <details class="faq">
          <summary>When launch?</summary>
          <p>Dates will be announced on official channels and reflected on this site.</p>
        </details>
        <details class="faq">
          <summary>How to avoid scams?</summary>
          <p>Verify the URL, contract, and links only here. If it’s not here, ignore it.</p>
        </details>
      </div>
    </section>
  </main>
</BaseLayout>
